<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionDosenDetailActivity">

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bgheader" />

    <TextView
        android:id="@+id/titlepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Question Details"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/subtitlepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Please answer for each question"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:lineSpacingExtra="6dp"
        android:textSize="18sp"
        android:layout_below="@id/titlepage"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/subtitlepage">

        <View
            android:id="@+id/view2"
            android:layout_width="340dp"
            android:layout_height="198dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/viewprofile"
            app:layout_constraintCircleRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/viewImageQuestion"
            android:layout_width="325dp"
            android:layout_height="185dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="38dp"
            app:layout_constraintCircleRadius="8dp"/>

        <TextView
            android:id="@+id/viewMatkul"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bginput"
            android:hint="Matkul"
            android:textAlignment="center"
            android:textColor="#28336C"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@+id/viewImageQuestion"/>

        <TextView
            android:id="@+id/viewDosen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bginput"
            android:hint="Dosen"
            android:textAlignment="center"
            android:textColor="#28336C"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@+id/viewMatkul"/>

        <TextView
            android:id="@+id/viewQuestion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bginput"
            android:hint="Question"
            android:textAlignment="center"
            android:textColor="#28336C"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@+id/viewDosen"/>

        <EditText
            android:id="@+id/viewAnswer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bginput"
            android:hint="Jawaban"
            android:textAlignment="center"
            android:textColor="#28336C"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@+id/viewQuestion"/>

        <Button
            android:id="@+id/btnAnswerQuestion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnblue"
            android:text="Submit Answer"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_below="@+id/viewAnswer"/>

    </RelativeLayout>


</RelativeLayout>